rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ‘©â€ğŸ“ User-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User's daily game attempts
    match /users/{userId}/dailyGames/{gameId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ§  Recommendations (per user)
    match /users/{userId}/recommendations/{recommendationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“˜ Quizzes (authenticated only)
    match /quizzes/{qualificationId}/{difficulty}/{quizId} {
      allow read, write: if request.auth != null;
    }

    // ğŸ† Leaderboard (public read)
    match /leaderboard/{gameId}/players/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“š Subjects (public read)
    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ğŸ“ Qualifications (public read)
    match /qualifications/{qualificationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
